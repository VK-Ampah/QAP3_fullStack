<html>
<%- include ('./partials/head.ejs') %>
<%- include ('./partials/navbar.ejs') %>
<body class="h-screen bg-slate-900 text-slate-100">
    <div class="flex flex-col justify-center items-center h-full">
        <h1 class="text-white text-xl font-semibold">Delete User</h1>
        <p class="text-white">Are you sure you want to delete this user?</p>

        <div class="text-red-700 ml-6">
            <form action="/users/<%= user.user_id %>/delete?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <!-- <button type="submit" class="bg-slate-100 py-2.5 rounded-lg w-2/4">delete <img src="/images/delete-2-svgrepo-com.svg" class="w-8 h-8 bg-red-600"></img>
                </button> -->
                <!-- <button type="button" onclick="window.location.href='/users/<%= user.user_id %>'" class="bg-red-700 py-2.5 rounded-lg w-2/4">Cancel</button> -->
                <div class="flex flex-row">
                <button type="submit" class=" font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 ">
                    <span class="text-blue-700">Delete</span>
                    <img src="/images/delete-2-svgrepo-com.svg" class="w-8 h-8 bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 shadow-lg shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80"></img>
                </button>
                <button type="button" onclick="window.location.href='/users/<%= user.user_id %>'" class="text-black font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                    <span class="text-red-700">Cancel</span>
                    <img src="/images/cancel-svgrepo-com.svg" class="w-8 h-8 bg-gradient-to-r from-red-600 via-red-500 to-red-800 rounded-full hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 shadow-lg shadow-red-500/50 dark:shadow-lg dark:shadow-red-800/80"></img>
                </button>
                </div>

            
            </form>
        </div>
    </div>
 
    <%- include ('./partials/footer.ejs') %>
  
</body>
</html>