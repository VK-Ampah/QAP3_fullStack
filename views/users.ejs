<html lang="en">
<%- include ('./partials/head.ejs') %>
<%- include ('./partials/navbar.ejs') %>
<body class="w-full h-screen text-white bg-slate-900">
    <div class="w-full h-full">
        <div class="flex flex-col justify-center items-center">
            <h1 class="text-slate-100 ml-6 mb-10 text-2xl">Displaying User Collection</h1>
            <div class="grid grid-cols-3 gap-4">
                <% if (users && users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <div class="border w-40 hover:border-red-400 hover:border-4">
                            <img src="<%= user.image_url ? user.image_url : '/images/default-image.svg' %>" alt="user image" class="w-40 h-20">
                            <h1 class=" ml-2"><%= user.first_name +' '+user.last_name %></h1>
                            <p class="ml-2">@<%= user.username%></p>
                            <a class="text-blue-800 ml-2" href="/users/<%= user.user_id %>">View Profile</a>
                        </div>
                    <% }); %>
                <% } else { %>
                    <!-- Skeleton cards -->
                    <% for(let i = 0; i < 3; i++) { %>
                        <div class="border border-slate-700 w-40 hover:border-red-400 hover:border-4 animate-pulse">
                            <div class="bg-slate-700 w-40 h-20"></div> <!-- Image placeholder -->
                            <div class="space-y-2 p-2">
                                <div class="h-4 bg-slate-700 rounded"></div> <!-- Name placeholder -->
                                <div class="h-4 bg-slate-700 rounded w-3/4"></div> <!-- Username placeholder -->
                                <div class="h-4 bg-blue-800 rounded w-1/2"></div> <!-- View Profile placeholder -->
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
    <%- include ('./partials/footer.ejs') %>
</body>
</html>
